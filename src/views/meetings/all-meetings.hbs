<div  class="row">
    <div class="col-md-6 offset-md-0 col-10 offset-1  mt-4  ">
        <h2 class="">Agendar Reuni贸n</h2>
        <form class="mt-4" method="POST" action="/meeting/add">
            <div class="form-group">
                <label for="contact">Contacto</label>
                <select class="form-control" id="contact" name="contact">
                    <option disabled selected>Seleccione un contacto</option>
                    {{#contacts}}
                        <option id="name" >{{name}}</option>
                    {{/contacts}}
                </select>
            </div>
            <div class="form-group">
                <label for="dateMeeting" >Fecha:</label>
                <input type="date" id="dateMeeting" name="dateMeeting" class="form-control">
            </div>
            <div class="form-group ">
                <label for="timeMeeting">Hora:</label>
                <input type="time" id="timeMeeting" name="timeMeeting" class="form-control">
            </div>

            <div class="form-group ">
                <label for = "description">Descripci贸n:</label>
                <textarea id="description" name="description" class="form-control"></textarea>
            </div>
            <div class="form-group row ">
                <div class="col-md-4 offset-md-4 text-center">
                    <button class="btn btn-success mt-2 mb-4" type="submit">
                        Guardar Meeting
                    </button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-4 offset-md-1 col-10 offset-1  mt-4">

        {{#if meetings}}
        <h2 class="">Administra tus reuniones</h2>
        {{/if}}
            {{#meetings}}
                <div data-id="{{id}}" class="card border-primary mb-3" style="max-width: 18rem;">
                    <div class="card-body ">
                        <h5 class="card-title">{{contact}}</h5>
                        <p class="card-text">Fecha: {{ showMeetingDate dateMeeting }} </p>
                        <p class="card-text">Hora: {{timeMeeting}}</p>
                        <p class="card-text">Descripci贸n: {{description}} </p>
                        <div class="row">
                            <div class="col">
                                <form action="/meetings/delete/{{_id}}?_method=DELETE" method="POST">
                                    <button type="button" class="btn btn-danger mt-2" data-bs-toggle="modal" data-bs-target="#exampleModal{{id}}">
                                        Eliminar
                                    </button>
                                    <div class="modal fade" id="exampleModal{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">Eliminar Cita</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Estas seguro que quieres eliminar la reuni贸n con {{contact}} ?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                                    <button type="submit" class="btn btn-primary">Aceptar</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="col">
                                <a class="btn btn-info mt-2" href="/meetings/edit/{{_id}}" role="button" > Editar </a>
                            </div>
                        </div>

                    </div>
                </div>

            {{/meetings}}
    </div>

</div> <!--.row-->