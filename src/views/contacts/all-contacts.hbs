<div >
    <a href="/contact/add"  class="btn btn-primary"><i class="fas fa-user-plus"></i> Agregar</a>
</div>
            <form action="/search"  method="GET" >
                <div class="row ">
                    <div class="col-7 offset-1 col-md-4   offset-md-0 mt-4">
                        <input list="optiones"  name="contact"   autocomplete="off" class="form-control"  placeholder="Nombre" type="text">
                        <datalist id="optiones">
                            {{#contacts}}
                                <option  value="{{name}}">
                                </option>
                            {{/contacts}}
                        </datalist>
                    </div>
                    <div class="col-4  col-md-8   offset-md-0 mt-4">
                        <button type="submit" class="btn btn-primary">Buscar </button>
                    </div>
                </div>
            </form>

<div class="row" id="contacts">
    {{#contacts}}
    <div class="col-10 offset-1 col-md-3 offset-md-0 ">
        <div class="card mt-4" >
            <img src="/upload/{{nombreArchivo}}" class=" card-img-top mx-auto  img-fluid" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{name}}<a href="/contact/edit/{{id}}"><svg fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" stroke="currentColor"><path d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path></svg> </a>
                </h5>
                <p class="card-text m-0">Email : {{email}}</p>
                <p  class="card-text">Celular : {{phone}}</p>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-2 offset-10 ">
                        <form action="/contacts/delete/{{id}}?_method=DELETE" method="POST">
                            <button type="button" class="fabutton" data-bs-toggle="modal" data-bs-target="#exampleModal{{id}}">
                                <i class="fas fa-trash"></i>
                            </button>
                            <div class="modal fade" id="exampleModal{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Eliminar {{name}}</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            Estas seguro que quieres eliminar ?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                            <button type="submit" class="btn btn-primary">Aceptar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
    {{/contacts}}
</div>

