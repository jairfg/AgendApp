<div class="col-md-6 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar nota</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit/{{note.id}}?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" value="{{note.title}}">
                </div>
                 <div class="form-group">
                    <textarea name="description" class="form-control" cols="30" rows="10">{{note.description}}</textarea>
                </div>
                 <div class="form-group">
                     <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                     </button>
                </div>
            </form>
        </div>
    </div>
</div>

